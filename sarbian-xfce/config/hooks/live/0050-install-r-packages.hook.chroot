#!/bin/bash

# Hook to install R packages

set -e

MIRROR="https://cran.rstudio.com"

declare -ar rpkgs=(
    abind
    cowplot
    dplyr
    ggplot2
    jpeg
    mapproj
    openair
    raster
    readxl
    reshape2
    rgdal
    rgeos
    scales
    shiny
    sp
)

for pkg in "${rpkgs[@]}"; do
    MAKE='make -j' R -e "install.packages('$pkg', dependencies=TRUE, repos='$MIRROR')"
done
